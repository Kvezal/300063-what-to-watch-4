{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@common/*": ["src/common/*"],
      "@containers/*": ["src/containers/*"],
      "@hocs/*": ["src/hocs/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
